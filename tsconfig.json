{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "dist",
    "target": "ESNext",
    "module": "commonjs",
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "incremental": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "allowJs": true
  },
  "include": [
    "./server/**/*",
    "./admin/**/*",
    "./admin/**/*.json",
    "./strapi-server.*",
    "./strapi-admin.*",
    "./scripts/**/*",
    "custom.d.ts"
  ],
  "exclude": ["**/node_modules/**/*", "**/dist/**/*"]
}
